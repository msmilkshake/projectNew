<div class="row">
    <div class="col-md-8 m-auto text-center">
        <img src="/images/slogo-2.png" style="height=20px;width:35px;">
        <h1>Sar<span class="text-success">ok</span>aar</h1>
        <p class="lead">We do listen to your concerns.</p>
    </div>
</div>

<%- include('../partials/messages.ejs') %>

<div class="row mb-5">
    <div class="col-md-8 m-auto text-center">
        <div class="card card-body">
            <form action="/user/updatepassword" method="POST">
                <div class="form-group bx">
                    <i class="fas fa-user-circle"></i>
                <div class="form-group bx">
                    <i class="fas fa-key"></i>
                    <input type="password" 
                    name="password" 
                    placeholder="password" 
                    value="<%= typeof password != 'undefined' ? password : '' %>"
                    class="transparent">
                </div>
                <div class="form-group bx">
                    <i class="fas fa-key"></i>
                    <input type="password" 
                    name="conformpassword" 
                    placeholder="conformpassword" 
                    value="<%= typeof conformpassword != 'undefined' ? conformpassword : '' %>"
                    class="transparent">
                </div>
                <input type="hidden" name="userId" value="<%= userId %>" style = "visibility: hidden">
                <input type="hidden" name="passwordToken" value="<%= passwordToken %>" style = "visibility: hidden">
                <input type="submit" value="Reset Password" class="btn btn-primary">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" style = "visibility: hidden">
            </form>

        </div>
    </div>
</div>
